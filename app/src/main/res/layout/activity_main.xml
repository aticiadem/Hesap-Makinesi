<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E3032"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="1"
        android:inputType="textPersonName"
        android:text="22+35"
        android:textSize="60sp"
        android:gravity="right|center"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="1"
        android:inputType="textPersonName"
        android:text="50"
        android:textSize="40sp"
        android:gravity="right|center"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/buttonGeriAl"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="right"
        android:background="@drawable/backspace"
        android:onClick="tiklamalar"
        android:layout_margin="10dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp">

            <Button
                android:id="@+id/buttonTemizle"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:text="C"
                android:onClick="tiklamalar"
                android:layout_marginRight="2dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:background="@android:color/holo_red_light"/>

            <Button
                android:id="@+id/buttonArtiEksi"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:text="+/-"
                android:onClick="tiklamalar"
                android:layout_marginRight="2dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:background="@android:color/holo_red_light"/>

            <Button
                android:id="@+id/buttonMod"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:text="%"
                android:onClick="tiklamalar"
                android:layout_marginRight="2dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:background="@android:color/holo_red_light"/>

            <Button
                android:id="@+id/buttonCarpma"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:text="*"
                android:onClick="tiklamalar"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:background="@android:color/holo_red_light"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp">

            <Button
                android:id="@+id/button7"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:text="7"
                android:textColor="@android:color/holo_red_light"
                android:onClick="tiklamalar"
                android:textSize="20sp"
                android:layout_marginRight="2dp"
                android:background="@color/white"/>

            <Button
                android:id="@+id/button8"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:text="8"
                android:textColor="@android:color/holo_red_light"
                android:onClick="tiklamalar"
                android:textSize="20sp"
                android:layout_marginRight="2dp"
                android:background="@color/white"/>

            <Button
                android:id="@+id/button9"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:text="9"
                android:textColor="@android:color/holo_red_light"
                android:onClick="tiklamalar"
                android:textSize="20sp"
                android:layout_marginRight="2dp"
                android:background="@color/white"/>

            <Button
                android:id="@+id/buttonBolme"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:text="/"
                android:onClick="tiklamalar"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:background="@android:color/holo_red_light"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp">

            <Button
                android:id="@+id/button4"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:text="4"
                android:textColor="@android:color/holo_red_light"
                android:onClick="tiklamalar"
                android:textSize="20sp"
                android:layout_marginRight="2dp"
                android:background="@color/white"/>

            <Button
                android:id="@+id/button5"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:text="5"
                android:textColor="@android:color/holo_red_light"
                android:onClick="tiklamalar"
                android:textSize="20sp"
                android:layout_marginRight="2dp"
                android:background="@color/white"/>

            <Button
                android:id="@+id/button6"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:text="6"
                android:textColor="@android:color/holo_red_light"
                android:onClick="tiklamalar"
                android:textSize="20sp"
                android:layout_marginRight="2dp"
                android:background="@color/white"/>

            <Button
                android:id="@+id/buttonToplama"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:text="+"
                android:onClick="tiklamalar"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:background="@android:color/holo_red_light"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp">

            <Button
                android:id="@+id/button1"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:text="1"
                android:textColor="@android:color/holo_red_light"
                android:onClick="tiklamalar"
                android:textSize="20sp"
                android:layout_marginRight="2dp"
                android:background="@color/white"/>

            <Button
                android:id="@+id/button2"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:text="2"
                android:textColor="@android:color/holo_red_light"
                android:onClick="tiklamalar"
                android:textSize="20sp"
                android:layout_marginRight="2dp"
                android:background="@color/white"/>

            <Button
                android:id="@+id/button3"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:text="3"
                android:textColor="@android:color/holo_red_light"
                android:onClick="tiklamalar"
                android:textSize="20sp"
                android:layout_marginRight="2dp"
                android:background="@color/white"/>

            <Button
                android:id="@+id/buttonCikarma"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:text="-"
                android:onClick="tiklamalar"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:background="@android:color/holo_red_light"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button0"
            android:layout_weight="2"
            android:layout_width="48dp"
            android:layout_height="70dp"
            android:text="0"
            android:textColor="@android:color/holo_red_light"
            android:onClick="tiklamalar"
            android:textSize="20sp"
            android:layout_marginRight="2dp"
            android:background="@color/white"/>

        <Button
            android:id="@+id/buttonNokta"
            android:layout_weight="1"
            android:layout_width="45dp"
            android:layout_height="70dp"
            android:text="."
            android:textColor="@android:color/holo_red_light"
            android:onClick="tiklamalar"
            android:textSize="20sp"
            android:layout_marginRight="2dp"
            android:background="@color/white"/>

        <Button
            android:id="@+id/buttonSonuc"
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_height="70dp"
            android:text="="
            android:onClick="tiklamalar"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@android:color/holo_red_light"/>

    </LinearLayout>

</LinearLayout>